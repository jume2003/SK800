<UserControl x:Name="finduserControl" x:Class="SK_ABO.UserCtrls.User.FindUser_Control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SK_ABO.UserCtrls.User"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="170" FontSize="18">
    <ComboBox x:Name="Com_LoginName" HorizontalAlignment="Stretch" Margin="0,0,0,0" VerticalAlignment="Stretch" IsEditable="True" Text="{Binding LoginName, ElementName=finduserControl, Mode=TwoWay}" DisplayMemberPath="LoginName" SelectedValuePath="LoginName" FontSize="{Binding FontSize, ElementName=finduserControl}" KeyUp="Com_LoginName_KeyUp"/>
</UserControl>
